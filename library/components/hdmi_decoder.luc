module hdmi_decoder (
    input rst,  // reset
    output pclk,
    input tmds[4],
    input tmdsb[4],
    output active,
    output x[11],
    output y[10],
    output red[8],
    output green[8],
    output blue[8]
  ) {
  
  dvi_decoder decoder (.rst(rst));
  
  .clk(decoder.pclk) {
    dff x_ctr[11];
    dff y_ctr[10];
    edge_detector hedge (#RISE(1), #FALL(0));
  }

  always {
    decoder.tmds = tmds;
    decoder.tmdsb = tmdsb;
    
    pclk = decoder.pclk;
    active = decoder.de;
    x = x_ctr.q;
    y = y_ctr.q;
    red = decoder.red;
    green = decoder.green;
    blue = decoder.blue;
    
    hedge.in = decoder.hsync;
    
    if (decoder.de) {
      x_ctr.d = x_ctr.q + 1;
      if (hedge.out)
        y_ctr.d = y_ctr.q + 1;
    }
    
    if (decoder.vsync) {
      x_ctr.d = 0;
      y_ctr.d = 0;
    }
  }
}
